<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="IT20225674_Display_Weekdays"
    android:orientation="vertical"
    android:background="@drawable/it20225674_background2">

    <!--top menu-->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="34dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/home_menu"
        app:navigationIcon="@drawable/ic_menu"
        app:title="My Weekdays"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons_background"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/day1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/it20225674_monday"
                    android:layout_centerHorizontal="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/day1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"/>


                <Button
                    android:id="@+id/btnday1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />
            </RelativeLayout>>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/buttons_background"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/day2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/it20225674_tueday"
                    android:layout_centerHorizontal="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/day2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center">
                </TextView>
                <Button
                    android:id="@+id/btnday2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">
                </Button>
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons_background"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/day3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/it20225674_wednesday"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/day3"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center">
                    </TextView>
                    <Button
                        android:id="@+id/btnday3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons_background"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/day4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/it20225674_thursday"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/day4"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center">
                    </TextView>
                    <Button
                        android:id="@+id/btnday4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </Button>
                </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons_background"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/day5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/it20225674_friday"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/day5"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center">
                    </TextView>

                    <Button
                        android:id="@+id/btnday5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"></Button>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>